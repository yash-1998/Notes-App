<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.notes.Noteview"
    tools:ignore="MergeRootFrame" 
    android:background="#FFF9C8">

    <Button
        android:id="@+id/notesupdatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:text="UPDATE"
        android:layout_marginLeft="29dp"
         />

    <Button
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/notesupdatebtn"
        android:layout_alignBottom="@+id/notesupdatebtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:text="BACK" />

    <EditText
        android:id="@+id/notebodyviewtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/notesupdatebtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/notetitleviewtext"
        android:layout_marginTop="40dp"
        android:ems="10"
           >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/notetitleviewtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        />

</RelativeLayout>